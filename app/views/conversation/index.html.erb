<% provide(:title, 'All conversations') %>
<h1>All conversations</h1>
<h4><%= link_to "Create New Direct Message", new_conversation_path%> </h4>
<ul class="users">
  <% if @conversations.present? %>
    <% @conversations.each do |conversation| %>
    <%= render partial: 'shared/conversation', locals: {conversation: conversation} %>
      <span>
        <% if (current_user.id == conversation.low_user_id or current_user.id == conversation.high_user_id)  %>
          <%= link_to "delete", conversation, method: :delete,
                                           data: { confirm: "You sure?" },
                                           title: conversation.id %>
        <% end %>
      </span>
    <% end %>
  <% end %>
</ul>
<%= will_paginate @conversations %>